<idea-plugin>
    <id>com.github.senordingdong.sprykerideaplugin</id>
    <name>spryker-idea-plugin</name>
    <vendor>senor-dingdong</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <actions>
        <action id="org.jetbrains.plugins.template.actions.ExtendInPyzAction"
                class="org.jetbrains.plugins.template.actions.ExtendInPyzAction" text="Extend in Pyz">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
