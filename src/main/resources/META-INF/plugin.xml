<idea-plugin>
    <id>com.github.senordingdong.sprykerideaplugin</id>
    <name>spryker-idea-plugin</name>
    <vendor>senor-dingdong</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.senordingdong.sprykerideaplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.senordingdong.sprykerideaplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.senordingdong.sprykerideaplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <action id="org.jetbrains.plugins.template.actions.ExtendInPyzAction"
                class="org.jetbrains.plugins.template.actions.ExtendInPyzAction" text="Extend in Pyz">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
